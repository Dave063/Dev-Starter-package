{
  "name": "Dev Starter Package",
  "version": "1.0.0",
  "description": "Software development web site",
  "main": "index.js",
  "dependencies": {
    "npm": "^6.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "concat": "^1.0.3",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "browser-sync": "^2.18.13"
  },
  "scripts": {
    "watch:sass": "node-sass sass/main.sass css/style.css -w",
    "devserver": "browser-sync start --server --files '*.html, css/*.css, js/*.js'",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.sass css/style-comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style-comp.css -o css/style-prefix.css",
    "compress:css": "node-sass css/style-prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Dave",
  "license": "MIT"
}
